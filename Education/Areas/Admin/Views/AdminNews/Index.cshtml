@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Education.Models.NewsItemModel>

@{
    ViewData["Title"] = "Tin tức";
    ViewData["Active"] = "2";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    var stt = 1;
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="row">
                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                    <h3 class="font-weight-bold">@ViewData["Title"]</h3>
                    <h6 class="font-weight-normal mb-4"><span class="text-primary">Mô tả chi tiết về tin tức</span></h6>
                </div>
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                #
                                            </th>
                                            <th>
                                                Ảnh
                                            </th>
                                            <th>
                                                Tiêu đề
                                            </th>
                                            <th>
                                                Độ hot
                                            </th>
                                            <th>
                                                Mô tả
                                            </th>
                                            <th>
                                                Ngày đăng
                                            </th>
                                            <th>
                                                Chức năng
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var newsItem in Model)
                                        {
                                            if (newsItem != null)
                                            {
                                                <tr>
                                                    <td class="py-1">
                                                        @stt
                                                    </td>
                                                    <td class="py-1">
                                                        <img src="@(newsItem.ImageObj != null && newsItem.ImageObj.RelativeUrl != null ?
                                                         newsItem.ImageObj.RelativeUrl : "~/img/background/background-blog.jpg")"
                                                             alt="image-news" />
                                                    </td>
                                                    <td class="limited-text">
                                                        @newsItem.Name
                                                    </td>
                                                    <td>
                                                        @(newsItem.IsHot ? @Html.Raw("<label class='badge badge-danger'>Hot</label>") : "Không")
                                                    </td>
                                                    <td class="limited-text">
                                                        @newsItem.Description
                                                    </td>
                                                    <td>
                                                        @newsItem.PublishedAt
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-inverse-dark btn-icon">
                                                            <i class="ti-pencil icon-sm"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-danger btn-icon">
                                                            <i class="ti-trash icon-sm"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                                stt++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.Count() <= 0)
                {
                    <p>Không có dữ liệu</p>
                }
                else
                {
                    <div class="container mt-4">
                        <div class="row">
                            <div class="col">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-area="admin" asp-controller="adminNews" asp-action="index" asp-route-page="@(Model.PageNumber - 1)">&laquo;</a>
                                    </li>
                                    @for (int i = 1; i <= Model.PageCount; i++)
                                    {
                                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                            <a class="page-link" asp-area="admin" asp-controller="adminNews" asp-action="index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                                        <a class="page-link" asp-area="admin" asp-controller="adminNews" asp-action="index" asp-route-page="@(Model.PageNumber + 1)">&raquo;</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>